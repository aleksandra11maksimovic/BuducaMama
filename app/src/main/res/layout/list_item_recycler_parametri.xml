                    app:layout_constraintEnd_toEndOf="@+id/txtkilaza"
                    app:layout_constraintStart_toStartOf="@+id/txtkilaza"
                    app:layout_constraintTop_toBottomOf="@+id/txtkilaza" />

                <ImageView
                    android:id="@+id/imageView7"
