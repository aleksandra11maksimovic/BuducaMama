<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forum.PostaviPitanjeActivity">

    <EditText
        android:id="@+id/etPitanje"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="pitanje ..."
        android:inputType="textMultiLine"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPostaviPit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postavi"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/etPitanje"
        app:layout_constraintStart_toStartOf="@+id/etPitanje"
        app:layout_constraintTop_toBottomOf="@+id/etPitanje" />
</android.support.constraint.ConstraintLayout>